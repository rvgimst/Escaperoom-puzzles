  FastLED.setBrightness(BRIGHTNESS); // set master brightness control
  FastLED.setMaxPowerInVoltsAndMilliamps(5, 500);
  FastLED.clear();
}

void loop() { 
  // Turn the LEDs on, then pause
  for (int i=0; i<NUM_LEDS; i++) {
    leds[i] = pattern[patternIdx];
  }
  FastLED.show();
  delay(DELAY_ON);

  // Now turn the LEDs off, then pause
  for (int i=0; i<NUM_LEDS; i++) {
    leds[i] = CRGB::Black;
  }
  FastLED.show();
  delay(DELAY_OFF);

  patternIdx = (patternIdx + 1) % NUM_PATTERN;
  if (patternIdx == 0) { // we're at the start again => add extra delay
    delay(3000);
  }
}
